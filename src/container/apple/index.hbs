<div class="page">
	{{#with header}}
		<section class="header">
			<header class="header__content">
				<div class="header__block">
					<img src="svg/header/apple.svg" alt="logo-apple" class="header__icon" />
					<nav class="header__block"> 
						{{#each links}}
							{{!-- <div class="nav__item"> --}}
								{{!-- <a href="{{url}}" class="nav__link"> {{text}} </a> --}}
								<a href="{{url}}" class="header__link"> {{text}} </a>
							{{!-- </div> --}}
						{{/each}}
					</nav>
				</div>
				<div class="header__block">
					<img src="svg/header/search.svg" alt="search" class="header__icon" />
					<img src="svg/header/profile.svg" alt="profile" class="header__icon" />
				</div>
			</header>
		</section>
		<section class="ad">
			{{#with ad}}
				<div class="ad__content">
					<div class="ad__block">{{title}}</div>
					<div class="ad__block">
						{{#with link}}
							<a class="ad__link" href="{{url}}">{{text}}</a>
							<span class="option"></span>
						{{/with}}
					</div>

				</div>
			{{/with}}
		</section>
	{{/with}}
